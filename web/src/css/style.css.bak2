/* ============================================
   위로가기 버튼 (Scroll To Top)
   ============================================ */
.scroll-to-top {
    position: fixed;
    bottom: 30px;
    right: 30px;
    width: 50px;
    height: 50px;
    background: #2a5298;
    color: white;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: none;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    z-index: 999;
    transition: all 0.3s;
}

.scroll-to-top:hover {
    background: #1a3f78;
    transform: translateY(-3px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.4);
}

.scroll-to-top.show {
    display: flex;
}


/* ============================================
   card-date-wrap 스타일 (layer 밖 - 높은 우선순위)
   ============================================ */
.card-date-wrap {
    display: flex;
    align-items: center;
    gap: 10px;
}

.card-date-wrap.right {
    flex-direction: column;
    align-items: flex-end;
    gap: 4px;
    text-align: right;
}

.card-date-wrap.right.inline {
    flex-direction: row;
    align-items: center;
    gap: 8px;
    flex-shrink: 0;
    white-space: nowrap;
}

.card-date-wrap.right.inline .card-date {
    margin-top: 0;
    line-height: 1;
}

.card-date-wrap.right.inline .card-badge {
    order: -1;
}

/* 모바일 전용 줄바꿈 - 데스크탑에서는 숨김 */
.mobile-br {
    display: none;
}


/* ============================================
   반응형 - 태블릿 (max-width: 768px)
   ============================================ */
@media (max-width: 768px) {
    .report-card {
