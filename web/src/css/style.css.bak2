    .popup-table-02 tbody tr.total-row .change-badge {
        font-size: 13px;
        margin-left: 6px;
    }

    .popup-table-02 tbody tr.total-row .change-badge svg {
        font-size: 12px;
    }

    .popup-section-desc {
        font-size: 12px;
    }

    .scroll-to-top {
        width: 45px;
        height: 45px;
        bottom: 70px;
        right: 20px;
        font-size: 18px;
    }

    .card-date-wrap.right.inline {
        gap: 6px;
    }
}

/* ============================================
   반응형 - 모바일 (max-width: 480px)
   ============================================ */
@media (max-width: 480px) {
    .report-page-wrapper {
        padding: 0;
    }

    .report-card {
        border-radius: 12px;
        margin-bottom: 16px;
    }

    .card-header {
        padding: 7px 14px 4px 14px;
        flex-direction: row;
        align-items: flex-start;
    }

    #secLastWeek .card-header,
    #secThisWeek .card-header {
        padding: 4px 14px 2px 14px;
        gap: 2px;
    }

    .card-header-top {
        flex-direction: row;
        justify-content: space-between;
        align-items: flex-start;
        gap: 6px;
        flex: 1;
        min-width: 0;
    }

    /* 카드 헤더 내 legend - 모바일 (일반 .legend와 분리) */
    .card-header > .legend {
        font-size: 10px;
        flex-direction: row;
        gap: 4px;
        margin-top: 0;
    }

    .card-header > .legend .legend-item {
        padding: 2px 5px;
    }

    /* 범례 모바일 - 카드 헤더 외부 */
    .card-body .legend,
    .result-grid + .legend {
        margin-top: 8px;
    }

    .card-title {
        font-size: 20px;
    }

    .card-title svg {
        font-size: 19px;
    }

    .card-date {
        font-size: 13px;
    }

    .card-badge {
        align-self: flex-start;
        padding: 3px 8px;
        font-size: 11px;
    }

    .card-date-wrap.right .card-date {
        font-size: 11px;
    }

    .card-body {
        padding: 4px 4px 10px 4px;
    }

    /* 알림 카드 모바일 */
    .alert-card {
        flex-wrap: wrap;
        padding: 12px;
        gap: 10px;
    }

    .alert-card-icon {
        width: 42px;
        height: 42px;
        font-size: 36px;
    }

    .alert-card-title {
        font-size: 16px;
    }

    .alert-card-subtitle {
        font-size: 13px;
    }

    .alert-card-total .value {
        font-size: 23px;
    }

    .alert-card-highlights {
        grid-template-columns: repeat(4, 1fr);
        gap: 4px;
        margin-left: 0;
    }

    .alert-highlight-item {
        padding: 4px 4px;
    }

    .alert-highlight-item .value {
        font-size: 20px;
    }

    .alert-highlight-item .label {
        font-size: 11px;
    }

    /* 실적 그리드 모바일 */
    .result-grid .cell {
        padding: 8px 4px;
        font-size: 14px;
    }

    .result-grid .cell.header {
        font-size: 12px;
    }

    .result-grid .cell.label {
        font-size: 14px;
    }

    .result-grid .cell.label .detail-icon {
        font-size: 12px;
    }

    .result-grid .cell.label .detail-icon svg {
        width: 12px;
        height: 12px;
    }

    .result-grid .cell.sub {
        font-size: 13px;
    }

    .result-grid .cell .change-wrap {
        font-size: 10px;
    }

    .result-grid .cell .sub-label {
        font-size: 10px;
    }

    .result-grid .cell.count:not(.lastweek),
    .result-grid .cell.avg:not(.lastweek) {
        font-size: 13px;
    }

    /* 캘린더 모바일 */
    .calendar-header {
        padding: 8px 2px;
    }

    .calendar-header .day-name {
        font-size: 11px;
    }

    .calendar-header .day-num {
        font-size: 15px;
    }

    .calendar-section {
        font-size: 14px;
        padding: 8px 2px;
    }

    .calendar-section .section-sub {
        font-size: 9px;
    }

    .calendar-section .section-unit {
        font-size: 9px;
    }

    .calendar-cell {
        padding: 10px 2px;
    }

    .calendar-cell .count {
        font-size: 14px;
    }

    .calendar-cell .unit {
        font-size: 11px;
    }

    /* 주간요약 모바일 */
    .summary-section {
        grid-template-columns: repeat(3, 1fr);
        margin-bottom: -1px;
    }

    .summary-card {
        padding: 8px 4px;
    }

    .summary-card .icon {
        font-size: 16px;
    }

    .summary-card .title {
        font-size: 12px;
    }

    .summary-card .count {
        font-size: 15px;
    }

    /* 아코디언 모바일 */
    .info-accordion-header {
        padding: 10px 12px;
    }

    .info-accordion-title {
        font-size: 14px;
    }

    .info-accordion-preview {
        display: flex;
        gap: 5px;
        font-size: 14px;
    }

    .info-accordion-preview span {
        padding: 3px 6px;
    }

    .info-accordion-preview span i {
        font-size: 12px;
    }

    .info-accordion-card .card-title {
        font-size: 14px;
    }

    .info-accordion-card .psy-value {
        font-size: 19px;
    }

    .info-accordion-card .value-box .label {
        font-size: 13px;
    }

    .info-accordion-card .value-box .value {
        font-size: 17px;
    }

    .info-accordion-card .psy-desc {
        font-size: 12px;
    }

    /* 관리포인트 모바일 */
    .mgmt-section {
        padding: 14px;
    }

    .mgmt-section .section-title {
        font-size: 15px;
    }

    .mgmt-card {
        padding: 14px;
    }

    .mgmt-card .card-title {
        font-size: 13px;
    }

    .mgmt-card .card-list {
        font-size: 12px;
    }

    /* 범례 모바일 */
    .legend {
        margin-top: 8px;
        gap: 4px;
        font-size: 10px;
        flex-wrap: nowrap;
        overflow-x: auto;
    }

    .legend-item {
        padding: 2px 5px;
        white-space: nowrap;
        flex-shrink: 0;
    }

    .legend .legend-item svg.fa-arrow-up-right-from-square {
        font-size: 10px;
        width: 10px;
        height: 10px;
    }

    /* 팝업 레이어 모바일 */
    .wr-layer-popup {
        padding: 8px;
    }

    .wr-popup-content {
        padding: 12px 10px;
        border-radius: 12px;
    }

    .wr-popup-header {
        padding-right: 40px;
        padding-bottom: 8px;
        margin-bottom: 12px;
    }

    .wr-popup-title {
        font-size: 15px;
    }

    .wr-popup-subtitle {
        font-size: 11px;
    }

    .wr-popup-close {
        width: 28px;
        height: 28px;
        font-size: 12px;
        top: 10px;
        right: 10px;
    }

    .wr-popup-close svg {
        width: 12px;
        height: 12px;
    }

    /* 팝업 닫기 버튼 모바일 */
    .popup-close-btn {
        width: 30px;
        height: 30px;
        font-size: 14px;
    }

    /* 팝업 탭 모바일 */
    .popup-tabs {
        margin-bottom: 12px;
    }

    .popup-tab {
        font-size: 14px;
        padding: 8px 10px;
        gap: 4px;
    }

    .popup-tab svg {
        font-size: 18px;
    }

    .popup-tab.active::after {
        height: 2px;
    }

    /* 팝업 테이블 02 모바일 */
    .popup-table-wrap {
        padding: 10px;
        border-radius: 8px;
    }

    .popup-table-02 {
        border-spacing: 0 5px;
    }

    .popup-table-02 thead tr th {
        padding: 5px 3px;
        font-size: 13px;
    }

    .popup-table-02 tbody td {
        padding: 8px 6px;
        font-size: 13px;
    }

    .popup-table-02 tbody td:first-child,
    .popup-table-02 tbody td:last-child {
        border-radius: 8px;
    }

    .popup-table-02 tbody td:first-child {
        border-radius: 8px 0 0 8px;
    }

    .popup-table-02 tbody td:last-child {
        border-radius: 0 8px 8px 0;
    }

    .popup-table-02 tbody tr.section-header td {
        font-size: 12px;
        padding: 10px 8px 4px 8px;
    }

    .popup-table-02 tbody td.total.grand {
        font-size: 14px;
    }

    .change-badge {
        font-size: 11px;
        margin-left: 3px;
    }

    .change-badge svg {
        font-size: 10px;
    }

    .popup-table-02 tbody tr.total-row .change-badge {
        font-size: 12px;
        margin-left: 5px;
    }

    .popup-table-02 tbody tr.total-row .change-badge svg {
        font-size: 11px;
    }

    .popup-section-desc {
        font-size: 11px;
    }

    /* info-note 모바일 */
    .info-note {
        font-size: 12px;
        margin-top: 5px;
    }

    /* 스크롤 투 탑 모바일 */
    .scroll-to-top {
        width: 40px;
        height: 40px;
        bottom: 60px;
        right: 15px;
        font-size: 16px;
    }

    .card-date-wrap.right.inline {
        gap: 4px;
    }

    /* 모바일 전용 줄바꿈 */
    .mobile-br {
        display: inline;
    }
}
